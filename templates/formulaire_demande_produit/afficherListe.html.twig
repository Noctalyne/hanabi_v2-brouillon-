{% extends 'base.html.twig' %}

{% block title %}FormulaireDemandeProduit Liste{% endblock %}

{% block body %}
    <h1>FormulaireDemandeProduit Liste</h1>

    <p> Liste des commandes de {{ client.nom}}  {{client.prenom }}</p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeProduit</th>
                <th>DescriptionProduit</th>
                <th>DateEnvoieForm</th>
                <th>DateReponseForm</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formulaire_demande_produit in formulaire_demande_produits %}
            <tr>
                <td>{{ formulaire_demande_produit.id }}</td>

                <td>{{ formulaire_demande_produit.type_produit }}</td>
                <td>{{ formulaire_demande_produit.description_produit }}</td>
