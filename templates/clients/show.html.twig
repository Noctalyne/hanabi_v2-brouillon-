{% extends 'base.html.twig' %}

{% block title %}
  Clients
{% endblock %}

{% block body %}
  <h1>Clients</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Email</th>
        <td>{{ user.email }}</td>
      </tr>
      <tr>
        <th>Username</th>
        <td>{{ user.username }}</td>
      </tr>
      <tr>
        <th>Password</th>
        <td>{{ user.password }}</td>
      </tr>
        <tr>
            <th>Nom</th>
            <td>{{ client.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ client.prenom }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ client.telephone }}</td>
        </tr>
           </tbody>
  </table>

  <a href="{{ path('app_accueil') }}">retour</a>

  <a href="{{ path('app_clients_edit', {'user_id': app.user.id }) }}">Modifier infos personnels</a>
  <a href="{{ path('app_user_edit', {'id': app.user.id }) }}">Modifier infos de connexion</a>
  
{% endblock %}